<div class="cont-<%= message.user.id %>">
  <div class="message-box msg-<%= message.user.id %>">
    <% unless message.room.is_private %>
      <h6 class="text-lg"> <%= message.user.email %> </h6>
    <% end %>
    <div class="text-base"><%= message.body %></div>
    <p class="text-xs"><%= time_ago_in_words(message.created_at) %> ago</p>
  </div>
</div>