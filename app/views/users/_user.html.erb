<% if @single_room && @single_room.participant?(@single_room, user) %>
  <% isActive = true %>
<% else %>
  <% isActive = false %>
<% end %>
<li class="flex px-8 py-6 transition duration-150 ease-in-out border-y <%= isActive ? 'border-2 border-indigo-600' : 'border-gray-300' %>">
  <%= link_to user.email, user, class:'cursor-pointer hover:bg-gray-300 focus:outline-none px-2 py-1', data: {turbo: "false"}%>
  <div class="icon-container">
    <%#= link_to image_tag(user.avatar, class: 'chat_pfp'), user %>
    <%= turbo_stream_from "user_status" %>
    <div>
      <%= render "users/status", user: user %>
    </div>
  </div>
</li>