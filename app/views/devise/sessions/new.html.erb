    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: "block font-medium text-sm text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 rounded-md shadow-sm block mt-1 w-full" %>
      </div>

      <div class="field mt-4">
        <%= f.label :password, class: "block font-medium text-sm text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 rounded-md shadow-sm block mt-1 w-full" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field block mt-4">
          <label for="remember_me" class="flex items-center">
            <%= f.check_box :remember_me, class: "rounded border-gray-300 text-indigo-600 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
            <%= f.label :remember_me, class: "ml-2 text-sm text-gray-600" %>
          </label>
        </div>
      <% end %>

      <div class="flex items-center justify-end mt-4">
        <div class="actions">
          <%= f.submit "Log in", class: "inline-flex items-center px-4 py-2 bg-gray-800 border border-transparent rounded-md font-semibold text-xs text-white uppercase tracking-widest hover:bg-gray-700 active:bg-gray-900 focus:outline-none focus:border-gray-900 focus:ring focus:ring-gray-300 disabled:opacity-25 transition ml-4" %>
        </div>
      </div>
    <% end %>

